# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pawn_shop
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pawn_shop

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration
API_URL=http://localhost:5000

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_PDF_GENERATION=true
ENABLE_CRON_JOBS=true

# ===== EMAIL CONFIGURATION FOR DUE DATE REMINDERS =====
# Email service configuration (Gmail example shown)
# For Gmail:
# 1. Enable "Less secure app access" or use an App Password
# 2. Use your Gmail address as EMAIL_USER
# 3. Use your Gmail password or App Password as EMAIL_PASSWORD

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-or-password
EMAIL_FROM=your-email@gmail.com

# For other providers, adjust EMAIL_HOST accordingly
# Examples:
# Outlook/Hotmail: smtp-mail.outlook.com (port 587)
# Yahoo: smtp.mail.yahoo.com (port 587)
# Custom SMTP: your-smtp-server.com

